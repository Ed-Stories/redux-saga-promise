{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "baseUrl": "./src",
    "module": "commonjs",
    "lib": ["dom", "dom.iterable"],
    "target": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": ["./src"]
}
